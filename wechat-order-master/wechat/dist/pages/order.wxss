.weui-search-bar {
  background-color: #fb7299 !important;
}
.sort {
  height: 40px;
  background-color: #fff;
}
.sort .sort-item {
  display: inline-block;
  width: 50%;
  text-align: center;
  font-size: 14px;
  line-height: 26px;
  margin-top: 7px;
  box-sizing: border-box;
}
.sort .sort-item:first-child {
  border-right: 1px solid #fb7299;
}
.main-box {
  display: flex;
  width: 100%;
  position: absolute;
  top: 95px;
  bottom: 50px;
}
.main-box .goods-box {
  flex: 1;
  height: 100%;
}
.selectSort {
  color: #fb7299;
}
